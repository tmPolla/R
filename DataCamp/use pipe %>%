library(gapminder)
library(dplyr)

#FILTER
my_data_set %>%
  filter(column_name==my_value, col_name2==my_value2)

my_data_set %>%
  filter(year==2018)

gapminder %>%
  filter(year==2018)

# ARRANGE
gapminder %>%
  arrange(column_name)
gapminder %>%
  arrange(desc(column_name))
  
# FILTER AND ARRANGE
gapminder %>%
  filter(year==2018) %>%
  arrange(column_name)

#MUTATE
#create a new column with calulated values
gapminder %>%
  mutate(gdp = gdpPercap * pop)
  
# Filter, mutate, and arrange the gapminder dataset
gapminder %>%
  filter(year==2007) %>%
  mutate(lifeExpMonths = 12 * lifeExp) %>%
  arrange(desc(lifeExpMonths))

#CREATE  NEW VARIABLE
new_var <- gapminder %>%
  filter(year==2018)
  
# SUMMARIZE
gapminder %>%
  summarize(new_Var_name = mean(column))

#GROUP BY
gapminder %>%
  group_by(year)
  summarize(medianLifeExp = median(lifeExp), maxGdpPercap=max(gdpPercap))
