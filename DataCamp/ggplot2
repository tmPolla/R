library(gapminder)
library(dplyr)
library(ggplot2)

#PLOT TYPES
geom_point() - scatter plot
geom_line() - line plot
geom_col() - bar plot
geom_histogram() - histogram
geom_boxplot() - boxplot
geom_smooth() - smooth line plot

# AESTHETICS
x - X axis position
y - Y axis position
color - colout of dots, outlines of other shapes
fill - fill colour
size - diameter of points, thickness of lines
shape - shape of the point
        value from 1-25. 
        shapes 1-20 can only accept a color aesthetic
        21-25 have both a color and a fill aesthetic
  1-circle / hollow
  2-triangle1
  3-cross
  4-cross2
  5-rectangle
  6-triangle2
  7- rectanlge with corss
  8- star
alpha - transparency, 0 is full transparent
linetype - line pattern
labels - text on a plot or axes


# SCATTER PLOT
ggplot(data_to_use, aes(x = col1, y = col2)) +
  geom_point()
  
ggplot(data_to_use, aes(x = col1)) +
  geom_histogram(binwidth=bin_number)  
  
#Log scales
ggplot(data_to_use, aes(x = col1, y = col2)) +
  geom_point()+
  scale_x_log10()
  
# COLOR
ggplot(var_to_use, aes(x = col1, y = col2, color=col3) +
  geom_point()
ggplot(var_to_use, aes(x = col1, y = col2, color=continent) +
  geom_point()


# ALPHA - TRANSPARENCY
# scatter plot with color and alpha can be a nice plot
ggplot(var_to_use, aes(x = col1, y = col2, color=col3) +
  geom_point(alpha = 0.4)


# SIZE
ggplot(var_to_use, aes(x = col1, y = col2, color=continent, size=pop) +
  geom_point()
  
  
# SUBPLOT
ggplot(gapminder_1952, aes(x = pop, y = lifeExp)) +
  geom_point()+
  scale_x_log10()+
  facet_wrap(~continent)


# Y STARTING POINT
ggplot(data_to_use, aes(x = col1, y = col2)) +
  geom_point()+
  expand_limits(y = 0)
  
  
# TITLE
ggplot(data_to_use, aes(x = col1, y = col2)) +
  geom_point()+
  ggtitle('new title text')


#LABEL
ggplot(data_to_use, aes(x = col1, y = col2,label=col3)) +
  geom_point()+
  geom_text()
  

# FACTOR
# col1 is treated as factor, don't show the unused values on the x axis 
# for example x axes can be 1,2,3,4,5 but we have data only on 2,4,5 so we would like to see 2,4,5
ggplot(data_to_use, aes(x = factor(col1), y = col2)) +
  geom_point()


# ADD SMOOTH LINE OVER THE POINTS
# with color this can be nice plot
ggplot(data_to_use, aes(x = col1, y = col2, color=col3))
  geom_smooth()
  
# ADD LINEAR MODEL
ggplot(data_to_use, aes(x = col1, y = col2, color=col3)) +
  geom_smooth(method="lm", se=FALSE)
